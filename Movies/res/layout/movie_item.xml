<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/posterImage"
        android:layout_width="130dp"
        android:layout_height="180dp"
        android:layout_margin="10dp"
        android:contentDescription="@string/abc_action_bar_home_description"
        android:scaleType="centerCrop"
        android:src="@drawable/default_poster" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/movieTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="10dp"
            android:text="@string/movie_name"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/typePlaceHolder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/movieTitle"
            android:layout_marginTop="5dp"
            android:text="@string/movie_type" />

        <TextView
            android:id="@+id/movieTypeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/typePlaceHolder"
            android:layout_alignBottom="@+id/typePlaceHolder"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:layout_toEndOf="@+id/typePlaceHolder"
            android:layout_toRightOf="@+id/typePlaceHolder"
            android:text="" />

        <TextView
            android:id="@+id/yearText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/typePlaceHolder"
            android:layout_marginTop="5dp"
            android:text="@string/movie_year" />

        <TextView
            android:id="@+id/movieYear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/yearText"
            android:layout_alignBottom="@+id/yearText"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:layout_toEndOf="@+id/yearText"
            android:layout_toRightOf="@+id/yearText"
            android:text="" />
    </RelativeLayout>

</LinearLayout>